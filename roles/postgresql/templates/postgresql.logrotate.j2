# PostgreSQL log rotation configuration
# Generated by Ansible PostgreSQL Role for Trackify Project

{{ postgresql_log_dir }}/*.log {
    daily
    missingok
    rotate 52
    compress
    delaycompress
    notifempty
    create 0640 postgres postgres
    sharedscripts
    postrotate
        /usr/bin/killall -HUP postgres || true
    endscript
}
