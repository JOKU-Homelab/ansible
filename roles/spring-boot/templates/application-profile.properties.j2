
# Environment-specific configuration for {{ spring_boot_profiles_active }}
# Generated by Ansible Spring Boot Role

{% if spring_boot_profiles_active == 'dev' %}
# Development-specific settings
logging.level.web=DEBUG
logging.level.sql=DEBUG
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true

# Development database settings
spring.datasource.hikari.maximum-pool-size=5
spring.datasource.hikari.minimum-idle=2

# Development security (less strict)
spring.security.oauth2.client.registration.trackify.redirect-uri=http://localhost:8080/login/oauth2/code/trackify

{% else %}
# Production-specific settings
logging.level.web=WARN
logging.level.sql=WARN
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.format_sql=false

# Production database settings
spring.datasource.hikari.maximum-pool-size=20
spring.datasource.hikari.minimum-idle=5
spring.datasource.hikari.connection-timeout=30000
spring.datasource.hikari.idle-timeout=600000
spring.datasource.hikari.max-lifetime=1800000

# Production security settings
server.error.include-stacktrace=never
server.error.include-message=never

# Production OAuth2 settings
spring.security.oauth2.client.registration.trackify.redirect-uri=https://trackify.jokulab.ch/login/oauth2/code/trackify
{% endif %}
