
{{ spring_boot_log_dir }}/*.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    create 0644 {{ spring_boot_user }} {{ spring_boot_group }}
    sharedscripts
    postrotate
        /bin/systemctl reload {{ spring_boot_service_name }} > /dev/null 2>&1 || true
    endscript
}
