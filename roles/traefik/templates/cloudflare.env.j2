# Cloudflare DNS Provider Configuration
# Generated by Ansible Traefik Role

{% if traefik_cloudflare_api_token != "" %}
# Using API Token (Recommended)
CF_API_TOKEN={{ traefik_cloudflare_api_token }}

{% if traefik_cloudflare_zone_api_token != "" %}
# Zone-specific API token
CF_ZONE_API_TOKEN={{ traefik_cloudflare_zone_api_token }}
{% endif %}

{% if traefik_cloudflare_dns_api_token != "" %}
# DNS-specific API token
CF_DNS_API_TOKEN={{ traefik_cloudflare_dns_api_token }}
{% endif %}

{% else %}
# Using Legacy API Key (Deprecated)
CF_API_EMAIL={{ traefik_cloudflare_email }}
CF_API_KEY={{ traefik_cloudflare_api_key }}
{% endif %}

# Optional: Specify zone ID for faster lookups
{% if traefik_cloudflare_zone_id is defined %}
CF_ZONE_ID={{ traefik_cloudflare_zone_id }}
{% endif %}

# DNS propagation check settings
CF_PROPAGATION_TIMEOUT=300
CF_POLLING_INTERVAL=10
CF_TTL=120