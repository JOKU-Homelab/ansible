# Traefik Configuration File
# Generated by Ansible Traefik Role for Trackify Project

# Global configuration
global:
  checkNewVersion: false
  sendAnonymousUsage: false

# Entrypoints configuration
entryPoints:
  web:
    address: ":80"
{% if traefik_entrypoints.web.redirect_to_https %}
    http:
      redirections:
        entrypoint:
          to: websecure
          scheme: https
          permanent: true
{% endif %}

  websecure:
    address: ":443"
    http:
      tls:
        options: default

{% if traefik_dashboard_enabled %}
  dashboard:
    address: ":{{ traefik_dashboard_port }}"
{% endif %}

# Providers configuration
providers:
  file:
    directory: {{ traefik_dynamic_config_dir }}
    watch: true

{% if traefik_letsencrypt_enabled %}
# Certificate resolvers
certificatesResolvers:
  letsencrypt:
    acme:
      email: {{ traefik_letsencrypt_email }}
      storage: {{ traefik_data_dir }}/acme.json
      caServer: "{{ traefik_letsencrypt_staging | ternary('https://acme-staging-v02.api.letsencrypt.org/directory', 'https://acme-v02.api.letsencrypt.org/directory') }}"
{% if traefik_challenge_method == 'dns' and traefik_dns_challenge_enabled %}
      dnsChallenge:
        provider: {{ traefik_dns_provider }}
        resolvers:
{% for resolver in traefik_dns_resolvers %}
          - "{{ resolver }}"
{% endfor %}
        delayBeforeCheck: 60s
{% else %}
      httpChallenge:
        entryPoint: web
{% endif %}
{% endif %}

# API and Dashboard
api:
  dashboard: {{ traefik_dashboard_enabled | lower }}
  debug: {{ (traefik_log_level == 'DEBUG') | lower }}

{% if traefik_metrics_enabled %}
# Metrics
metrics:
{% if traefik_metrics_prometheus_enabled %}
  prometheus:
    addEntryPointsLabels: true
    addServicesLabels: true
    addRoutersLabels: true
{% endif %}
{% endif %}

# Logging
log:
  level: {{ traefik_log_level }}
{% if traefik_log_file %}
  filePath: {{ traefik_log_file }}
{% endif %}

{% if traefik_access_log_enabled %}
accessLog:
{% if traefik_access_log_file %}
  filePath: {{ traefik_access_log_file }}
{% endif %}
  format: json
  fields:
    defaultMode: keep
    names:
      ClientUsername: drop
    headers:
      defaultMode: keep
      names:
        User-Agent: keep
        Authorization: drop
        Content-Type: keep
{% endif %}

# TLS Options
tls:
  options:
    default:
      sslStrategies:
        - "tls.SniStrict"
      minVersion: "VersionTLS12"
      cipherSuites:
        - "TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384"
        - "TLS_ECDHE_RSA_WITH_CHACHA20_POLY1305"
        - "TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256"
        - "TLS_ECDHE_RSA_WITH_AES_128_CBC_SHA256"